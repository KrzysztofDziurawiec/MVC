@model Vidly.ViewModels.ListMovieViewModel
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<div>
   @if (Model.Movies.Count == 0)
   {
       <p>No movie found</p>
   }
   else
   {
    <table class="table table-bordered table-hover">
        <tr>
            <th>
                Movie
            </th>
        </tr>
        
            @foreach(var movie in Model.Movies)
            {
                <tr>
                    <td>
                        @movie.Name
                    </td>
                </tr>
              
            }
        
    </table>
   }
</div>
